<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upenn.cis350.workingdogapp.FosterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.75">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true">

                <TextView
                    android:text="Dog Name:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name" />

                <TextView
                    android:text="Foster Parent: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/parent" />

                <TextView
                    android:text="Breed:"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/breed" />

                <TextView
                    android:text="Age:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/age" />

                <TextView
                    android:text="Weight:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weight" />

                <TextView
                    android:text="Body Score:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bodyScore" />

                <TextView
                    android:text="How Much to Feed:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodSize" />

                <TextView
                    android:text="Feeder Type:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feederType" />

                <TextView
                    android:text="Food Type: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodType" />

                <TextView
                    android:text="Treat Restrictions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/treatRestrictions" />

                <TextView
                    android:text="Number of Meals Per Day:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/meals" />

                <TextView
                    android:text="Allergies:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/allergies" />

                <TextView
                    android:text="Fish Oil:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fishOil" />

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ScrollView02"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:scrollbars="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:background="@drawable/rectangle"
            android:fillViewport="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true">

                <!--<ExpandableListView-->
                    <!--android:text="COMMENTS"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/comments" />-->

                <TextView
                    android:text="SCROLL FOR COMMENTS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments" />


            </LinearLayout>
        </ScrollView>

        <Button
        android:id="@+id/Button_Feedback"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:onClick="launchForm"
        android:text="@string/buttontext_feedback"></Button>


            <Button
                android:id="@+id/ButtonComments"
                android:layout_height="wrap_content"
                android:text="Add Comments"
                android:onClick="commentsSection"
                android:layout_width="fill_parent"></Button>

        <Button
            android:id="@+id/ButtonHistory"
            android:layout_height="wrap_content"
            android:text="View Dog Weight History"
            android:onClick="weightHistory"
            android:layout_width="fill_parent"></Button>


    </LinearLayout>
</ScrollView>

